<UserControl
    x:Class="ScpProfiler.UI.MappingSources.SourceButtonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mappingSources="clr-namespace:ScpProfiler.UI.MappingSources"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=mappingSources:MappingSourceViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Button Icon -->
        <Image
            Grid.Column="0" Grid.Row="0"
            ToolTip="{Binding Path=Name}"
            Width="48"
            Source="{Binding  Path=IconSource}" />
        <!-- Button/Axis signal strength -->
        <CheckBox
            Grid.Column="1" Grid.Row="0"
            ToolTip="Is Pressed"
            Height="16" Margin="5,16"
            IsChecked="{Binding IsPressed, FallbackValue='../gamepad/circle.png'}" />
        <Label
            Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
            Content="{Binding Name, FallbackValue=Unbinded}" 
            
            />
    </Grid>
</UserControl>