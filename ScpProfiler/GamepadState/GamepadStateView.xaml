<UserControl
    x:Class="ScpProfiler.GamepadState.GamepadStateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScpProfiler.Views"
    xmlns:viewModels="clr-namespace:ScpProfiler.ViewModels"
    xmlns:gamepadState="clr-namespace:ScpProfiler.GamepadState"
    xmlns:mappingSources="clr-namespace:ScpProfiler.Views.MappingSources"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=gamepadState:GamepadStateViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <ListView
            Grid.Column="0"
            Background="Transparent" 
            ItemsSource="{Binding Path=Buttons}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <mappingSources:SourceButtonView DataContext="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView
            Grid.Column="1"
            Background="Transparent" 
            ItemsSource="{Binding Path=Axes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <mappingSources:SourceAxisView DataContext="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>